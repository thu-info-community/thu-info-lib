{
    "name": "thu-info-lib",
    "version": "4.0.2",
    "description": "The JavaScript library that provides a program-friendly interface to Tsinghua web portal",
    "main": "dist/index.js",
    "files": [
        "dist/**/*",
        "src/**/*"
    ],
    "scripts": {
        "build": "tsc",
        "test": "jest",
        "play": "node -r esm --experimental-repl-await",
        "demo": "node -r esm demo.js",
        "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
        "fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
        "draft": "node versionhelper.js draft",
        "release": "node versionhelper.js release",
        "build-dist": "webpack --config webpack.config.js",
        "watch-dist": "webpack -w --config webpack.config.js"
    },
    "keywords": [
        "tsinghua",
        "thu",
        "info",
        "thuinfo",
        "thu-info",
        "thu info"
    ],
    "maintainers": [
        {
            "name": "UNIDY2002",
            "email": "UNIDY2002@outlook.com"
        },
        {
            "name": "Ashitemaru",
            "email": "qhd19@mails.tsinghua.edu.cn"
        }
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/thu-info-community/thu-info-lib.git"
    },
    "dependencies": {
        "abort-controller": "3.0.0",
        "cheerio": "1.0.0-rc.12",
        "cross-fetch": "3.1.5",
        "dayjs": "1.11.5",
        "he": "^1.2.0",
        "iconv-lite": "0.6.3",
        "image-size": "^1.0.1",
        "jspdf": "^2.5.1",
        "uuid": "9.0.0",
        "xlsx": "0.18.5"
    },
    "devDependencies": {
        "@types/cheerio": "0.22.31",
        "@types/he": "1.1.2",
        "@types/jest": "29.0.0",
        "@types/uuid": "8.3.4",
        "@typescript-eslint/eslint-plugin": "5.36.1",
        "@typescript-eslint/parser": "5.36.1",
        "eslint": "8.23.0",
        "esm": "3.2.25",
        "jest": "29.0.2",
        "node-polyfill-webpack-plugin": "2.0.1",
        "pre-commit": "1.2.2",
        "readline-sync": "1.4.10",
        "semver": "7.3.7",
        "ts-jest": "28.0.8",
        "ts-loader": "9.3.1",
        "typescript": "4.8.2",
        "webpack": "5.74.0",
        "webpack-cli": "4.10.0"
    },
    "pre-commit": [
        "lint"
    ],
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    }
}
